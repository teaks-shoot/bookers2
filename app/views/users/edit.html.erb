<div class="container">
  <div class="row pt-3">
    <div class="col-md-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <% if @user.errors.count == 1 %>
          <h3> <%= @user.errors.count %> error prohibited this obj from being saved: </h3>
        <% else %>
          <h3> <%= @user.errors.count %> errors prohibited this obj from being saved: </h3>
        <% end %>
        
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      
      <%= form_with model: @user do |f| %>
      
        <div class="form-group">
          <label for="inputName">Name</label> <br>
          <%= f.text_field :name, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <label for="inputImage">Image</label> <br>
          <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <label>Introduction</label> <br>
          <%= f.text_area :introduction , class: "form-control" %>
        </div>
  
        <%= f.submit 'Update User' , class: "btn btn-secondary" %>
      <% end %>
      
    </div>
  </div>
</div>