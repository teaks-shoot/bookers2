<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render 'books/infonew', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1"> 
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="w-25"> image </th>
            <th class="w-50"> name </th>
            <th></th>
          </tr>
        </thead>
        
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "show", user_path(user.id) %>
              </td>
            </tr>
          </tbody>  
        <% end %>
        
      </table>
    </div>
  
  </div>
</div>