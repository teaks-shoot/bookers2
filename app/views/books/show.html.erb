<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <h2> User info </h2> 
      <%= image_tag @user.get_profile_image(100,100) %>

      <table>
        <tr>
          <th> name </th>
          <th> <%= @user.name %> </th>
        </tr>
        <tr>
          <th> introduction </th>
          <th> <%= @user.introduction %> </th>
        </tr>
      </table>

        
      <%= link_to edit_user_path(current_user.id), class: "btn btn-block btn-outline-secondary mt-2" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      
      <h2 class="mt-3"> New book </h2>

      <%= form_with model: Book.new , url:'/books' , method: :post do |f| %>
        <p> Title </p> 
        <%= f.text_field :title %>

        <p> Opinion </p>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' , class: "btn btn-sm btn-success" %>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1"> 
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %> <br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>  
        
      </table>
    </div>
  
  </div>
</div>