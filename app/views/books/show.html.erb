<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render 'books/infonew', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1"> 
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %> <br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
          </tr>
        </tbody>  
        
      </table>
    </div>
  
  </div>
</div>