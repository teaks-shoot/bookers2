  <h2> User info </h2> 
  <%= image_tag user.get_profile_image(100,100) %>

  <table>
    <tr>
      <th> name </th>
      <th> <%= user.name %> </th>
    </tr>
    <tr>
      <th> introduction </th>
      <th> <%= user.introduction %> </th>
    </tr>
  </table>

  <%= link_to edit_user_path(current_user.id), class: "btn btn-block btn-outline-secondary mt-2" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

      
  <h2 class="mt-3"> New book </h2>

  <%= form_with model: Book.new , url:'/books' , method: :post do |f| %>
    <p> Title </p> 
    <%= f.text_field :title %>

    <p> Opinion </p>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' , class: "btn btn-sm btn-success" %>
  <% end %>